
@{
    ViewBag.Title = "Sugestao";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sugestao</h2>

@foreach (Projeto1.Models.ModItensPedidos item in Model)
{
    <div class="col-md-6">
        <div class="panel-heading" role="tab" id="headingOne">


            <a class="list-group-item collapsed">
                <div class="row">
                    <div class="col-md-6">
                        <label>Nome: </label>@item.produto.nomeProduto <br />
                    </div>


                </div>
                <div class="row">
                    <div class="col-md-4">
                        <label>Tipo: </label>@item.produto.tipoProduto.descricao <br />
                    </div>



                    
                </div>
            </a>

        </div>

    </div>

}