
@{
    ViewBag.Title = "SugestaoBebida";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    .card {
        /* Add shadows to create the "card" effect */
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        width: 220px;
    }

        /* On mouse-over, add a deeper shadow */
        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
        }

    /* Add some padding inside the card container */
    .container {
        padding: 2px 16px;
    }
</style>
@foreach (Projeto1.Models.ModItensPedidos item in Model)
{
    <div class="col-md-6">

        <div class="card">
            <img src="~/Content/Imagens/teste.jpg" alt="Avatar" width="220px">
            <div class="container">
                <h3><b>@item.produto.nomeProduto </b></h3>
                <div class="row">
                    <div class="col-md-2">
                        <b>Valor: </b>@item.oferece.valor

                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">
                        <div class="item">
                            <input type="checkbox" name="codBeb1" group class="item-checkbox" value="@item.produto.codigoProduto" id="codBeb1">
                            <label class="item-label" for="codBeb1">
                                <span class="item-inner"></span>
                                <span class="item-switch"></span>
                                <input type="hidden" name="valorBeb1" value="@item.oferece.valor">
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>



    </div>

}

