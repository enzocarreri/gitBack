
@{
    ViewBag.Title = "ListarMistura";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #confirm {
        background-color: #ffffff;
        border-left: 8px solid #334b64;
        border-right: 8px solid #334b64;
        border-bottom: 8px solid #334b64;
        border-top: 1px solid #334b64;
        border-radius: 25px;
        width: 1100px;
        box-shadow: 0 4px 12px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        text-align: left;
    }

        #confirm:hover {
            background-color: #ffffff;
            border-left: 8px solid #334b64;
            border-right: 8px solid #334b64;
            border-bottom: 8px solid #334b64;
            border-top: 1px solid #334b64;
            border-radius: 25px;
            box-shadow: 0 16px 24px 0 rgba(0,0,0,0.2);
        }

    #titulo {
        font-size: 32px;
        text-align: center;
        font-family: 'Comic Sans MS';
    }
</style>

<div class="info" id="confirm">
    <p id="titulo"><strong> Mistura</strong></p>
</div>
<br /><br />



<fieldset data-role="controlgroup">
    @foreach (Projeto1.Models.ModOfereceProduto item in Model)
    {
        <div class="col-md-6">
            <div class="row">

                <div class="chipPriMisGua">

                    <img src="~/Content/Imagens/teste.jpg" alt="Person" width="96" height="96">
                    <div class="col-md-8">
                        <div class="row">
                            <div class="col-md-8">
                                <b>Prato:</b> @item.produto.nomeProduto<br />
                            </div>
                            <div class="col-md-1">
                                <div class="item">
                                    <input type="checkbox" name="item" class="item-checkbox" value="@item.produto.codigoProduto" id="@item.produto.codigoProduto">
                                    <label class="item-label" for="@item.produto.codigoProduto">
                                        <span class="item-inner"></span>
                                        <span class="item-switch"></span>
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-8">
                                <b>Tipo: </b> @item.produto.tipoProduto.descricao <br />
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>

        <br /><br />



    }

</fieldset>

























