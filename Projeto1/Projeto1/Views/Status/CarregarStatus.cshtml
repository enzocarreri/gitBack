
@{
    ViewBag.Title = "CarregarStatus";
    
}


<form class="form-inline" action="@Url.Action("AlterarStatus","Status")">

    @foreach (Projeto1.Models.ModPedido item in Model)
    {


        



                <div class="row">
            <div class="form-group">
                <input type="hidden" name="codigoPedido" value="@item.codigoPedido">
                <select name="status" id="lala" class="form-control">
                    <option value="@item.status">@item.status</option>

                    <option onclick="location.href='@Url.Action("AlterarStatus","Status", new { codigoPedido = @item.codigoPedido, status = "Aguarando", })'" value="Aguardando">Aguardando</option>
                    <option onclick="location.href='@Url.Action("AlterarStatus","Status", new { codigoPedido = @item.codigoPedido, status = "Em analise" })'" value="Em analise">Em analise</option>
                    <option value="Entregue">Entregue</option>
                    <option value="Motoboy">Motoboy</option>
                </select>
                <button class="btn btn-primary" id="cadastrar" type="submit">Cadastrar</button>



            </div>
            </div>




                }

</form>