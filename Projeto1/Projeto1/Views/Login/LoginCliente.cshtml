
@{
    ViewBag.Title = "LoginCliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<form class="form-horizontal" action="@Url.Action("AdmLogin","login")">
    <div class="control-group">
        <label class="control-label" for="inputEmail">Login</label>
        <div class="controls">
            <input type="text" class="form-control" placeholder="Login Usuario" name="login">
        </div>
    </div>
    <div class="control-group">
        <label class="control-label" for="inputPassword">Senha</label>
        <div class="controls">
            <input type="text" class="form-control" placeholder="senha123456" name="senha">

        </div>
       
    </div>
    <div class="form-group">
        <div class="col-md-1 ">
            <div class="checkbox">
                <label>
                    <input type="checkbox" name="item"> Empresa
                </label>
            </div>
        </div>
    </div>
    <div class="control-group">
        <div class="controls">
           

            
            <button class="btn btn-primary" type="submit">Acessar</button>
        </div>
    </div>
</form>
